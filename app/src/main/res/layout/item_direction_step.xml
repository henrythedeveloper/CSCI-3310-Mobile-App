<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Direction Icon (Arrow) -->
    <ImageView
        android:id="@+id/step_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_directions"
        android:contentDescription="@string/desc_directions_icon"
        app:tint="@color/uc_black"
        xmlns:app="http://schemas.android.com/apk/res-auto"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp">

        <!-- Instruction Text -->
        <TextView
            android:id="@+id/step_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn left onto 10th St"
            android:textSize="16sp"
            android:textColor="@color/uc_black"
            android:textStyle="bold"/>

        <!-- Distance -->
        <TextView
            android:id="@+id/step_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 ft"
            android:textSize="14sp"
            android:textColor="@color/uc_dark_gray"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

</LinearLayout>