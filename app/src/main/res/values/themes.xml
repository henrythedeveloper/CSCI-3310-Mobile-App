<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CSCI_3310_Final_Project" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color (Black) -->
        <item name="colorPrimary">@color/uc_black</item>
        <item name="colorPrimaryVariant">@color/uc_dark_gray</item>
        <item name="colorOnPrimary">@color/uc_gold</item>

        <!-- Secondary brand color (Gold) -->
        <item name="colorSecondary">@color/uc_gold</item>
        <item name="colorSecondaryVariant">@color/uc_gold</item>
        <item name="colorOnSecondary">@color/uc_black</item>

        <!-- Status Bar Color (Top of phone) -->
        <item name="android:statusBarColor">@color/uc_black</item>
        <!-- Status Bar Text Color (Light text for dark background) -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Default Background -->
        <item name="android:windowBackground">@color/uc_light_gray</item>
    </style>

    <!-- Style for the "Outlined" text inputs used in Search -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/uc_gold</item>
        <item name="hintTextColor">@color/uc_dark_gray</item>
    </style>
</resources>